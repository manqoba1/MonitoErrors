<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/grey"
    tools:context="com.com.boha.monitor.library.fragments.ProjectListFragment">

    <RelativeLayout
        android:id="@+id/ER_LIST_layoutx"
        android:padding="16dp"
        android:background="@color/beige_pale"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ER_LIST_ErrorCount"
            android:text="00"
            style="@style/GreySquare"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ER_LIST_label"
            style="@style/Title2TextStyleGrey"
            android:layout_centerVertical="true"
            android:text="@string/monitor_android_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <ListView
        android:layout_marginTop="10dp"
        android:layout_below="@id/ER_LIST_layoutx"
        android:id="@android:id/list"
        android:background="@color/white"
        android:dividerHeight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@android:id/empty"
        android:text="+"
        style="@style/RedCircle"
        android:visibility="gone"
        android:textSize="28sp"
        android:layout_margin="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />

</RelativeLayout>
