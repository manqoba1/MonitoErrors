<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@drawable/xwhite_rounded_corners"
                android:layout_height="wrap_content">

    <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/ONE_ROUND_image"
            android:src="@drawable/flag_sa32"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

    <TextView
            android:id="@+id/ONE_ROUND_playerName"
            android:text="@string/txt"
            android:layout_toRightOf="@id/ONE_ROUND_image"
            style="@style/Title3TextStyleBlack"
            android:textStyle="normal" android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/ONE_ROUND_position"
            style="@style/GreenCountBoxSmall"
            android:textSize="20sp"
            android:text="@string/zero"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_alignBaseline="@id/ONE_ROUND_playerName"
            android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/ONE_ROUND_winnerImage"
            android:src="@drawable/winner_red32"
            android:layout_toLeftOf="@id/ONE_ROUND_position"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/ONE_ROUND_playerName"
            android:layout_toRightOf="@id/ONE_ROUND_image"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/ONE_ROUND_totLabel"
                style="@style/TextStyleGrey"
                android:text="@string/total_score"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/ONE_ROUND_totalScore"
                style="@style/TextStyleBold"
                android:textColor="@color/opaque_red"
                android:textSize="16sp"
                android:text="@string/zero"
                android:textStyle="bold"
                android:layout_toRightOf="@id/ONE_ROUND_totLabel"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/ONE_ROUND_parLabel"
                style="@style/TextStyleGrey"
                android:text="@string/par" android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/ONE_ROUND_totalScore"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/ONE_ROUND_par"
                style="@style/TextStyleBold"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:text="+3"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/ONE_ROUND_parLabel"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@id/ONE_ROUND_par"
                android:layout_alignLeft="@id/ONE_ROUND_totLabel"
                android:layout_marginTop="30dp"
                android:id="@+id/LBITEM_lastHoleLayout"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/ONE_ROUND_lastHoleLabel"
                    android:text="Last Recorded Hole"
                    style="@style/TextStyleGrey"
                    android:textStyle="bold" android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/ONE_ROUND_lastHole"
                    android:text="1"
                    android:layout_toRightOf="@id/ONE_ROUND_lastHoleLabel"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textColor="@color/green_two"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>